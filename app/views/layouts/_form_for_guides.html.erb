<div class="guide_errors">
  <ul>
    <% @guide.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
</ul>
</div>

<%= form_for [@game, @guide] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %></br>
  <%= f.label :body %></br>
  <%= f.text_area :body %></br>
  <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.hidden_field :game_id, value: params[:id] %>
  <%= f.submit data: { disable_with: false }%>
  <% end %>
